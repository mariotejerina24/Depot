<p id="notice"><%= notice %></p>

<h1>Listing Editorials</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Cantidad de productos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= paginate(@editorials) %>
    
    <% @editorials.each do |editorial| %>
      <tr>
        <td><%= editorial.name %></td>
        <td><%= editorial.address %></td>
        <td><%= editorial.phone %></td>
        <td><%= editorial.email %></td>
        <td><%= editorial.products.count %></td>
        <td><%= link_to "Ver Productos", products_path(:editorial_id => editorial.id) %></td>
        <td><%= link_to 'Show', editorial %></td>
        <td><%= link_to 'Edit', edit_editorial_path(editorial) %></td>
        <td><%= link_to 'Destroy', editorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Editorial', new_editorial_path, :class => "btn btn-default" %>
