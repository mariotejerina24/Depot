<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

    <%= paginate(@categories) %>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td> 
        <td><%= link_to "Ver Productos (#{category.products.count})", products_path(:category_id => category.id) %></td>
        <td><%= link_to "<i class=\"glyphicon glyphicon-eye-open\"></i> Show".html_safe, category %></td>
        <td><%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i> Edit".html_safe, edit_category_path(category) %></td>
        <td><%= link_to "<i class=\"glyphicon glyphicon-trash\"></i> Destroy".html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<form>
 <input name=q <%= @q %> >
 <button type=”submit”> Limite </button>
</form>
<br>

<p><a class="btn btn-success" href="/categories?nombre=true" role="button">Ordenar por Nombre</a></p>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn btn-default" %>
